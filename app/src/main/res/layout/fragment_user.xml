<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<include layout="@layout/titlebar"></include>


    <LinearLayout
        android:id="@+id/personal_myinfo_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingLeft="10.0dp"
        android:paddingRight="10.0dp" >


        <com.qike.feiyunlu.tv.presentation.view.widgets.CircleImg
            android:id="@+id/person_icon"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="center_vertical"
            app:border_width="0dp"
            android:src="#d0d0d0" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >


            <LinearLayout
                android:id="@+id/login_person_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/personal_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:text="阿荣荣"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/user_room_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房间号：12345"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/room_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="3dp"
            android:src="@drawable/live_share" />

    </LinearLayout>


</LinearLayout>
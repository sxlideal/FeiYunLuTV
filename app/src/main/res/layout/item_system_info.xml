<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/app_backcolor">

    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
       <ImageView 
        android:id="@+id/iv_system_icon"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/feiyun_logo"
        />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            
            <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_marginRight="11dp"
		        android:background="#d0d0d0" />
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feiyun_assistant"
                android:textColor="#ff5959"
                android:textSize="13dp"/>
            
             <TextView
                 android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="03月4日 14:25"
                android:textSize="10sp"
                android:textColor="#666666" />
            
            </RelativeLayout>

           
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="4dp"
                android:text="地球大作战地球大作战地球大作战地球大作战地球大作战地球大地球大作战地球大作战地球大作战地球大作战地球大作战地球大作战地球大作战地球大作战地球大作战地球大作战地球大作战地球大作战地球大作战地球大作战地球大作战"
				android:textSize="11sp"
				android:textColor="#666666"/>

     <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">      

          <RelativeLayout
              android:id="@+id/rl_btn_details"
              android:layout_width="40dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="11dp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:clickable="true"
              android:focusable="true"
              android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/details"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="#21aaff"
                    android:background="#e5e5e6"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_details"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/details_show" />

            </RelativeLayout>

     </RelativeLayout>

        </LinearLayout>
        
    </LinearLayout>

<include layout="@layout/liner_layout"
    ></include>

</LinearLayout>
